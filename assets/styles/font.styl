body
p
div
  font-family 'Open Sans', sans-serif
  font-weight 300
  color base-color
  font-size base-size
  line-height 2

h1
  font-family 'apex_newthin'
  font-size 40px
  letter-spacing 10px
  padding-left 10px
  text-transform uppercase
  color highlight-color
  line-height normal

h2
  font-family 'apex_newbook'
  font-size 24px
  letter-spacing 5px
  text-transform uppercase

h3
  font-family 'apex_newmedium'
  letter-spacing 1px
  color slate-blue-color

h4
  display inline-block
  color dark-blue-color
  letter-spacing 0.5px

h5
  font-family 'apex_newbook'
  font-size 20px
  letter-spacing 5px
  text-transform uppercase

a
  text-decoration none
  display inline-block
  line-height normal
  color dark-blue-color
  border-bottom 1px solid dark-blue-color
  &:hover 
    border-color highlight-color
    color highlight-color

em
  display inline-block
  line-height normal
  color highlight-color
  border-bottom 1px solid highlight-color

@media only screen and (min-device-width : 320px) and (max-device-width : 568px), (max-width : 768px)
  body
  p
  li
    font-size mobile-base-size
  h2
    font-size mobile-intro-size

